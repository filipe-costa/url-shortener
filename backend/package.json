{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API using Expressjs and Cassandra",
  "main": "index.ts",
  "author": "Filipe Costa",
  "license": "MIT",
  "scripts": {
    "sequelize:pre-migrate": "ts-node ./src/db/scripts/scripts.ts",
    "sequelize:init": "yarn sequelize init",
    "sequelize:model-generate": "yarn sequelize model:generate",
    "sequelize:db-migrate": "yarn sequelize:pre-migrate && yarn sequelize db:migrate",
    "sequelize:undo-migrate": "yarn sequelize db:migrate:undo",
    "start:dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "start:prod": "tsc && node ./build/index.js",
    "build": "tsc"
  },
  "dependencies": {
    "@types/sqlite3": "^3.1.7",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "hashids": "^2.2.8",
    "helmet": "^4.6.0",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.2.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.3.3",
    "prettier": "2.3.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.1.2"
  }
}
