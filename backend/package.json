{
   "name": "backend",
   "version": "1.0.0",
   "description": "Backend API using Expressjs and Cassandra",
   "main": "index.ts",
   "author": "Filipe Costa",
   "license": "MIT",
   "scripts": {
      "typeorm": "ts-node ./node_modules/typeorm/cli.js",
      "typeorm:do-migration": "yarn typeorm migration:create",
      "typeorm:run-migration": "yarn typeorm migration:run",
      "typeorm:revert-migration": "yarn typeorm migration:revert",
      "start:dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
      "start:prod": "tsc && node ./build/index.js",
      "build": "tsc",
      "test": "jest",
      "test:debug": "ts-node --inspect node_modules/.bin/jest",
      "start": "ts-node src/index.ts"
   },
   "dependencies": {
      "better-sqlite3": "^7.4.3",
      "cors": "^2.8.5",
      "dotenv": "^10.0.0",
      "express": "^4.17.1",
      "hashids": "^2.2.8",
      "helmet": "^4.6.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.2.34"
   },
   "devDependencies": {
      "@babel/core": "^7.14.6",
      "@babel/plugin-transform-runtime": "^7.14.5",
      "@babel/preset-env": "^7.14.7",
      "@babel/preset-typescript": "^7.14.5",
      "@types/cors": "^2.8.12",
      "@types/express": "^4.17.13",
      "@types/jest": "^26.0.24",
      "@types/node": "^16.3.3",
      "@types/sqlite3": "^3.1.7",
      "axios": "^0.21.1",
      "jest": "^27.0.6",
      "prettier": "2.3.2",
      "ts-node": "10.1.0",
      "ts-node-dev": "^1.1.8",
      "typescript": "4.3.5"
   }
}
